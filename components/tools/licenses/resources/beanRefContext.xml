<beans>

  <bean    id="ome.licensed_client"
    	  class="ome.system.OmeroContext"
    lazy-init="true">
    <description>
    Licensed Client OmeroContext. This context can be created by calling 
    OmeroContext.getContext(Properties p, "ome.licensed_client").

    Copied from client/resources/beanRefContext.xml See that file for more info.
    </description>
    <constructor-arg>
    	<list>
        <value>ome/services/licenses/spring.xml</value>
      </list>
    </constructor-arg>      
    <constructor-arg index="1" value="false"/>
    <constructor-arg index="2" ref="ome.client.internal"/>      
  </bean>
    
 </beans>
