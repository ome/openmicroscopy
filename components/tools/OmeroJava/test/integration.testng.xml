<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >

<suite name="OmeroJava.integration" time-out="30000">
  <test name="integration">
    <groups>
      <run>
        <exclude name="broken"/>
      </run>
    </groups>
    <packages>
      <package name="integration.*"/>
      <package name="unit.*"/>
    </packages>
  </test>
  <test name="broken">
    <groups>
      <run>
        <include name="broken"/>
      </run>
    </groups>
    <packages>
      <package name="integration.*"/>
      <package name="unit.*"/>
    </packages>
  </test>
</suite>
