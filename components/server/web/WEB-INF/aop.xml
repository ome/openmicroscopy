<!--

	AOP Components, where not defined elsewhere 
	(security.xml or dao.xml for example)
 
-->

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>	
	
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- INTERCEPTORS -->	
	<bean 
		       id="serviceTracing" 
		    class="org.springframework.aop.interceptor.JamonPerformanceMonitorInterceptor" 
		lazy-init="true"
	/>

	<bean 
		       id="logging" 
		    class="ome.aop.ReturnLogger" 
		lazy-init="true"
	/>

	<bean 
		       id="apiConstraints" 
		    class="ome.aop.ApiConstraintChecker" 
		lazy-init="true"
	/>
	
	<bean
		       id="exceptionHandling"
	    	    class="ome.aop.ExceptionHandler"
		lazy-init="true"
	/>
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

</beans>
