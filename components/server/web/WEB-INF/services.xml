<!--

	Configuration of top-level services.
 
-->

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>	
	
	<bean id="serviceBeanNameProxyCreator"
		class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="beanNames"><value>*Service</value></property>
		<property name="interceptorNames">
		<list>
<!--			<value>serviceSecurity</value>
			<value>serviceTransactions</value> -->
		</list>
		</property>
	</bean>
	
	<bean id="hierarchyBrowsingService" class="org.openmicroscopy.omero.logic.HierarchyBrowsingImpl">
		<property name="annotationDao"><ref bean="annotationDao"/></property>
		<property name="containerDao"><ref bean="containerDao"/></property>
	</bean>		

</beans>
