<!--

	Configuration of top-level services.
	TODO add log4j configuration (e.g. update intervals)
 
-->

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>	
	
	<!-- Aspects/Interceptors which catch ALL calls to our service methods
		 =================================================================
		 Possibilities are: tracing, logging, security, transactions, etc.
	 -->
	<bean id="serviceBeanNameProxyCreator"
		class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="beanNames"><value>*Service</value></property>
		<property name="interceptorNames">
		<list>
			<value>exceptionHandling</value>
			<value>apiConstraints</value>
			<value>serviceSecurity</value>
			<value>logging</value>	
			<value>proxyFilter</value>
			<value>transactions</value> 
<!--			
				
			<value>serviceTracing</value>
-->
		</list>
		</property>
	</bean>

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- SERVICES -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<bean id="analysisService" class="ome.logic.AnalysisImpl">
		<property name="analysisDao" ref="analysisDao"/>		
		<property name="annotationDao" ref="annotationDao"/>
		<property name="containerDao" ref="containerDao"/>
		<property name="genericDao" ref="genericDao"/>		
	</bean>		
				
	<bean id="hierarchyBrowsingService" class="ome.logic.HierarchyBrowsingImpl">
		<property name="annotationDao" ref="annotationDao"/>
		<property name="containerDao" ref="containerDao"/>
	</bean>		

	<bean id="writeService" class="ome.logic.WriteImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"/>
		<property name="genericDao" ref="genericDao"/>		
	</bean>		

	<bean id="pixelsService" class="ome.logic.PixelsImpl">
		<constructor-arg index="0" ref="daoFactory"/>
	</bean>			
    	
	<bean id="pojosService" class="ome.logic.PojosImpl">
		<constructor-arg index="0" ref="daoFactory"/>
	</bean>		
   	
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- FACADES -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<bean id="primitiveHierarchyBrowsingFacade" class="ome.facade.PrimitiveHierarchyBrowsingImpl">
		<property name="hierarchyBrowsingService" ref="hierarchyBrowsingService"/>
	</bean>		

		
</beans>
