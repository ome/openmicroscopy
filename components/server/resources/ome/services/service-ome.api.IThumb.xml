<beans>	

  <bean parent="level2" id="internal:ome.api.IThumb" class="ome.logic.ThumbImpl">
    <property name="ioService" ref="/OME/OMEIS/Thumbs"/>
    <property name="renderingEngine" ref="internal:ome.services.RenderingWrapper"/>
    <property name="scaleService" ref="internal:ome.api.IScale"/>
  </bean>
  
  <bean id="managed:ome.api.IThumb" parent="managedService">
    <property name="proxyInterfaces" value="ome.api.IThumb"/>
    <property name="target" ref="internal:ome.api.IThumb"/>
  </bean>

</beans>
