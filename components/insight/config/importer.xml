<?xml version="1.0" encoding="utf-8"?>
<agent name="Importer">
   <resources>
     <iconFactories>
	<!-- This entry is turned into an instance of: 
       org.openmicroscopy.shoola.env.config.IconFactory
       This object can then be used to retrieve any image file within
       the directory pointed by the location tag. -->
       <structuredEntry name="/resources/icons/Factory" type = "icons">
         <!-- The location tag specifies the FQN of the package that contains
         the icon files. -->
         <location>org.openmicroscopy.shoola.agents.fsimporter.graphx</location>
       </structuredEntry>

     </iconFactories>
     <fonts>
       <!-- This entry is turned into an instance of java.awt.Font. --> 
       <structuredEntry name="/resources/fonts/Titles" type="font">
         <family>SansSerif</family>
         <size>12</size>
         <style>bold</style>
       </structuredEntry>
     </fonts>
</resources>
<!-- Indicate that option is turned on or off -->
<options>
<!-- The default value -->
<entry name="/options/Archived" type="boolean">false</entry>
<!-- if set to true, the user can modify the value -->
<entry name="/options/ArchivedTunable" type="boolean">true</entry>
<!-- if set to true, the thumbnail is loaded when the image is imported -->
<entry name="/options/LoadThumbnail" type="boolean">true</entry>
<!-- if a folder is selected, check how deep to go. The default value is 1. -->
<entry name="/options/ScanningDepth" type="integer">1</entry>
<!-- if set to true, when a folder is selected, it will be marked to be turned
into a dataset -->
<entry name="/options/FolderAsDataset" type="boolean">true</entry>
<!-- if set to true, the debug tab will be displayed. -->
<entry name="/options/Debug" type="boolean">false</entry>
<!-- limit the number of files to import at once -->
<entry name="/options/ImportFileLimit" type="integer">2000</entry>
<!-- Is offline import enabled? true = YES, false = N0. -->
<entry name="omero.client.import.offline.enabled" type="boolean">true</entry>
</options>
</agent>