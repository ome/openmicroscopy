<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.openmicroscopy.omero.model.Feature" 
    table="features"
>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="featureId"
        type="java.lang.Integer"
        column="feature_id"
    >
        <generator class="sequence">
            <param name="sequence">feature_seq</param>
        </generator>
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="name"
        length="128"
    />
    <property
        name="tag"
        type="java.lang.String"
        column="tag"
        not-null="true"
        length="128"
    />

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Image -->
    <many-to-one
        name="image"
        class="org.openmicroscopy.omero.model.Image"
        not-null="true"
    >
        <column name="image_id" />
    </many-to-one>
    <!-- bi-directional one-to-many association to Feature -->
    <set
        name="features"
        lazy="true"
        inverse="true"
		cascade="all"
    >
        <key>
            <column name="parent_feature_id" />
        </key>
        <one-to-many 
            class="org.openmicroscopy.omero.model.Feature"
        />
    </set>
    <!-- bi-directional many-to-one association to Feature -->
    <many-to-one
        name="feature"
        class="org.openmicroscopy.omero.model.Feature"
        not-null="true"
    >
        <column name="parent_feature_id" />
    </many-to-one>

</class>
</hibernate-mapping>
