<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="ome.model.core.Image" 
    table="image"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="image"
    </meta>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="id"
        type="java.lang.Integer"
        column="image_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="sequence"
            type="java.lang.Integer"
            column="image_id"

           @hibernate.generator-param
	        name="sequence"
	        value="image_seq"
        </meta>
        <generator class="sequence">
            <param name="sequence">image_seq</param>
        </generator>
    </id>


<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	 COMMON
     ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <version
        name="version"
        type="java.lang.Integer"
        column="version"
        unsaved-value="negative"
    >
        <meta attribute="field-description">
           @hibernate.version
            column="version"
            unsaved-value="negative"
        </meta>
    </version>

    <component name="permissions"
		class="ome.model.internal.Permissions">
		<property name="bytes" type="binary" column="permissions"/>
    </component>
    <many-to-one name="owner" class="ome.model.meta.Experimenter" not-null="true" cascade="save-update"/>
    <many-to-one name="creationEvent" class="ome.model.meta.Event" not-null="true" cascade="save-update"/>		
    <many-to-one name="updateEvent" class="ome.model.meta.Event" not-null="false"/>	
	
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	 SPECIFIC
     ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	

    <property
        name="pixelsId"
        type="java.lang.Integer"
        column="pixels_id"
        length="4"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="pixels_id"
            length="4"
        </meta>    
    </property>
    <property
        name="name"
        type="java.lang.String"
        column="name"
        not-null="true"
        length="256"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="name"
            length="256"
            not-null="true"
        </meta>    
    </property>
    <property
        name="description"
        type="java.lang.String"
        column="description"
        length="256"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="description"
            length="256"
        </meta>    
    </property>
    <property
        name="groupId"
        type="java.lang.Integer"
        column="group_id"
        length="4"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="group_id"
            length="4"
        </meta>    
    </property>
    <property
        name="imageGuid"
        type="java.lang.String"
        column="image_guid"
        length="256"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="image_guid"
            length="256"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to ImageDatasetLink -->
    <set
        name="imageDatasetLinks"
        lazy="true"
        inverse="true"
		cascade="all"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="all"

           @hibernate.collection-key
            column="image_id"

           @hibernate.collection-one-to-many
            class="ome.model.core.ImageDatasetLink"
        </meta>
        <key>
            <column name="image_id" />
        </key>
        <one-to-many 
            class="ome.model.core.ImageDatasetLink"
        />
    </set>

</class>
</hibernate-mapping>
