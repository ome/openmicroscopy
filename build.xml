            <ivy:retrieve conf="client" pattern="${dist.dir}/lib/client/[artifact].[ext]" sync="false" log="quiet" settingsRef="ivy.toplevel"/>
            <ivy:report conf="client" todir="${dist.dir}/lib"
                graph="false" settingsRef="ivy.toplevel"/>
