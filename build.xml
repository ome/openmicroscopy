            <ivy:retrieve conf="server" pattern="${dist.dir}/lib/server/[artifact].[ext]" sync="false" log="quiet" settingsRef="ivy.toplevel"/>
            <ivy:report conf="server" todir="${dist.dir}/lib"
                graph="false" settingsRef="ivy.toplevel"/>
